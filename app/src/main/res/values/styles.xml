<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_background</item>
        <item name="colorPrimaryDark">@color/theme_background</item>
        <item name="colorAccent">@color/text_highlight</item>
    </style>

    <style name="edtCodeStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:digits">0123456789</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ItemDirectOptions">
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:minWidth">200dp</item>
    </style>
    <style name="TextDrawerStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_very_light</item>
    </style>
    <style name="ProfileImage">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>
    <style name="LayoutMessage">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>
