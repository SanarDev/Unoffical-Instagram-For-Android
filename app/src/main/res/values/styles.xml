<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_background</item>
        <item name="colorPrimaryDark">@color/theme_background</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edtCodeStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:digits">0123456789</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
